JSAPI_FLAGS   = @JSAPI_FLAGS@
prefix=@prefix@
exec_prefix=@exec_prefix@
sysconfdir=@sysconfdir@
bindir=@bindir@
libdir=@libdir@
version=@PACKAGE_VERSION@

CFLAGS=-I JSEXT1/C/0-include -shared $(JSAPI_FLAGS) -O3 -fPIC $(XCFLAGS)

%.so : %.c ; cc $(CFLAGS) $< -o $@

TARGETS=Type.so Pointer.so Dl.so load.so clib.so clib.jswrapper print.never

all:	$(TARGETS)

print.never:	print.js
	JSEXT_INI='0-init.js' ../jsext 0-build.js

Dl.so:	Dl.c Type.so Pointer.so
	cc $(CFLAGS) ./Pointer.so ./Type.so Dl.c -o Dl.so

Pointer.so:	Pointer.c Type.c
	cc $(CFLAGS) Type.c -o Type.so
	cc $(CFLAGS) ./Type.so Pointer.c -o Pointer.so -lffi
	cc $(CFLAGS) ./Pointer.so Type.c -o Type.so

Type.so:	Type.c Pointer.c
	cc $(CFLAGS) Pointer.c -o Pointer.so
	cc $(CFLAGS) ./Pointer.so Type.c -o Type.so
	cc $(CFLAGS) ./Type.so Pointer.c -o Pointer.so -lffi

clib.jswrapper: Pointer.so Type.so 0-makeclib.js
	$(MAKE) -C JSEXT1/C XCFLAGS="$(XCFLAGS)"
	$(MAKE) -C JSEXT1 XCFLAGS="$(XCFLAGS)"
	JSEXT_INI='0-makeclib.js' ../jsext > clib.jswrapper
