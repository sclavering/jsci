JSAPI_FLAGS   = @JSAPI_FLAGS@
prefix=@prefix@
exec_prefix=@exec_prefix@
sysconfdir=@sysconfdir@
bindir=@bindir@
libdir=@libdir@
version=@PACKAGE_VERSION@
JSEXT_version=1_0

CFLAGS=-I C/0-include -shared $(JSAPI_FLAGS) -O3 -fPIC $(XCFLAGS)
%.so : %.c ; cc $(CFLAGS) $< -o $@

all:	ActiveCdb.so


ActiveCdb.so:	ActiveCdb.c
	cc $(CFLAGS) ActiveCdb.c -o ActiveCdb.so -lcdb

clean:
	rm -f $(TARGETS)

