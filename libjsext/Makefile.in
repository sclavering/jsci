JSAPI_FLAGS   = @JSAPI_FLAGS@
prefix=@prefix@
exec_prefix=@exec_prefix@
sysconfdir=@sysconfdir@
bindir=@bindir@
libdir=@libdir@
version=@PACKAGE_VERSION@

JSX_SHARED_FLAGS = $(JSAPI_FLAGS) -Dsysconfdir=\"$(sysconfdir)\" -I../js/src -Dlibdir=\"$(libdir)\"

YFLAGS	= -dv
CFLAGS	= -Wall -O3 $(JSX_SHARED_FLAGS) $(XCFLAGS)
CXXFLAGS = -Wall -O3 $(JSX_SHARED_FLAGS) -fno-exceptions -fno-rtti
LFLAGS	= 
LDFLAGS	= -L../js/src/Linux_All_OPT.OBJ

all:	jsext

Type.o: jsci.h
Pointer.o: jsci.h
Dl.o: jsci.h
JsciType.o: jsci.h
JsciTypeBitfield.o: jsci.h
JsciTypeNumeric.o: jsci.h
JsciTypeInt.o: jsci.h
JsciTypeUint.o: jsci.h
JsciTypeFloat.o: jsci.h
JsciTypeStruct.o: jsci.h
JsciTypeUnion.o: jsci.h
JsciTypeArray.o: jsci.h
JsciTypeFunction.o: jsci.h
JsciTypePointer.o: jsci.h
JsciTypeStructUnion.o: jsci.h
JsciTypeVoid.o: jsci.h
JSX_Set.o: jsci.h


JSX_OBJS = jsext.o environment.o load.o Dl.o Pointer.o Type.o encodeJSON.o decodeJSON.o encodeUTF8.o decodeUTF8.o encodeBase64.o decodeBase64.o clib.o util.o JsciType.o JsciTypeVoid.o JsciTypeNumeric.o JsciTypeInt.o JsciTypeUint.o JsciTypeFloat.o JsciTypePointer.o JsciTypeStructUnion.o JsciTypeStruct.o JsciTypeUnion.o JsciTypeBitfield.o JsciTypeArray.o JsciTypeFunction.o JSX_Set.o JsciPointer.o c_gram.o c_scan.o xml.o libctoxml.o strbuf.o

jsext:	$(JSX_OBJS)
	g++ $(JSAPI_FLAGS) $(LDFLAGS) $(JSX_OBJS) -o jsext -lm -pthread -rdynamic -ljs -ldl -lffi


# c-to-xml stuff

c_scan.h:	c_scan.c

c_scan.c:	c_scan.l
	$(LEX) -Pctoxml_c -t --header-file=c_scan.h c_scan.l > c_scan.c

c_scan.o	: c_gram.h

c_gram.c:	c_gram.y
	$(YACC) -p ctoxml_c -dv -o c_gram.c c_gram.y
